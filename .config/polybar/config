[module/sp]
type = custom/text
content = "  "
;content-background = ${xrdb:color0:#222}
content-background = #cc121212
click-left = spotifycli --prev

[module/spp]
type = custom/script
interval = 0
exec = sh /home/george/Scripts/spotify-playpause.sh
format = <label>
format-background = ${xrdb:color0:#222}
click-left = spotify-cli --playpause

[module/sps]
type = custom/text
content = "  "
format = <label>
