[module/spotify]
type = custom/script
interval = 2
format = <label>
format-prefix = "  "
click-left = xdotool key super+0
format-prefix-foreground = ${colors.zero}
format-prefix-background = ${colors.four}
format-background = ${colors.four}
exec = ~/.config/polybar/scripts/spot
tail = true

[module/cmus]
type = custom/script
interval = 1
format-prefix = "♪ "
;format-prefix-foreground = #ff7bed9d
format = <label>
exec = sh ~/Scripts/cmus-song-echo.sh
;format-underline = #ff7bed9d
format-underline = ${xrdb:color4:#222}
click-left = cmus-remote -u

[module/cn]
type = custom/text
content = "  "
tail = true
format = <label>
content-background = #cc121212
;content-background = ${xrdb:color0:#222}
click-left = cmus-remote -n && sh ~/Scripts/cmus-notify.sh

[module/cp]
type = custom/text
content = "  "
;content-background = ${xrdb:color0:#222}
