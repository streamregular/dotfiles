[module/spotify-now]
type = custom/script
interval = 1
format-prefix = "♪ "
;format-prefix-foreground = #ff7bed9d
format = <label>
exec = spotify-now -i "%artist - %title" -e "Mamamoo - Starry Night"
;format-underline = #ff7bed9d
format-underline = ${xrdb:color4:#222}
;optional [stolen from the spotify script]
click-left = spotifycli --playpause

